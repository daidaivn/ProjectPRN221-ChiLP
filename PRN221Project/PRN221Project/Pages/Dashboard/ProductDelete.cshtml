@page
@model PRN221Project.Pages.Dashboard.ProductDeleteModel
@{
}

<h1>Delete Product</h1>

<div class="container mt-4">
    <h2>Are you sure you want to delete this product?</h2>
    <div class="row">
        <div class="col-md-6">
            <h4>Product Information</h4>
            <div>
                <p><strong>Product ID:</strong> @Model.Product.ProductId</p>
                <p><strong>Product Name:</strong> @Model.Product.ProductName</p>
                <p><strong>Category:</strong> @Model.Product.Category?.CategoryName</p>
                <p><strong>Supplier:</strong> @Model.Product.Supplier?.SupplierName</p>
                <p><strong>Quantity:</strong> @Model.Product.Quantity</p>
                <p><strong>Unit Price:</strong> @Model.Product.UnitPrice</p>
                @if (Model.Product.IsActive.HasValue)
                {
                    <p><strong>IsActive:</strong> @(Model.Product.IsActive.Value ? "Bật" : "Tắt")</p>
                }
                else
                {
                    <p><strong>IsActive:</strong> Unknown</p>
                }
            </div>
        </div>
        <!-- Add other product details here -->
    </div>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger mt-3" />
        <a asp-page="/Dashboard/Product" class="btn btn-secondary mt-3 ml-2">Cancel</a>
    </form>
</div>

