@page
@model PRN221Project.Pages.Dashboard.SupplierDeleteModel
@{
    ViewData["Title"] = "Delete Supplier";
}

<h1>Delete Supplier</h1>

<h3>Are you sure you want to delete this supplier?</h3>

<form method="post">
    <input type="hidden" asp-for="Supplier.SupplierId" />
    <div class="form-group">
        <label>Supplier Name:</label>
        <span>@Model.Supplier.SupplierName</span>
    </div>
    <div class="form-group">
        <label>Supplier Address:</label>
        <span>@Model.Supplier.SupplierAddress</span>
    </div>
    <div class="form-group">
        <label>Supplier Phone:</label>
        <span>@Model.Supplier.SupplierPhone</span>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="SupplierList" class="btn btn-secondary">Cancel</a>
</form>
