@page
@model PRN221Project.Pages.Dashboard.SupplierEditModel
@{
    ViewData["Title"] = "Edit Supplier";
}

<h1>Edit Supplier</h1>

<form method="post">
    <input type="hidden" asp-for="Supplier.SupplierId" />
    <div class="form-group">
        <label for="SupplierName">Supplier Name</label>
        <input type="text" class="form-control" asp-for="Supplier.SupplierName" required>
    </div>
    <div class="form-group">
        <label for="SupplierAddress">Supplier Address</label>
        <input type="text" class="form-control" asp-for="Supplier.SupplierAddress" required>
    </div>
    <div class="form-group">
        <label for="SupplierPhone">Supplier Phone</label>
        <input type="text" class="form-control" asp-for="Supplier.SupplierPhone" required>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>