@page
@model project.Pages.Authen.LoginModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h1>Đăng nhập</h1>
                    <form method="post">
                        <div>
                            <label for="Username">Tên đăng nhập:</label>
                            <input type="text" id="Username" name="Username" asp-for="Username" />
                        </div>
                        <div>
                            <label for="Password">Mật khẩu:</label>
                            <input type="password" id="Password" name="Password" asp-for="Password" />
                        </div>
                        <input type="submit" value="Đăng nhập" />
                        <button asp-page="/Index">Back to home</button>
                    </form>

                    @if (Model.LoginFailed)
                    {
                        <p>Đăng nhập không thành công. Vui lòng kiểm tra lại thông tin đăng nhập.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>